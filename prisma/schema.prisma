generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PATIENT
  DOCTOR
}

enum Language {
  ENGLISH
  ARABIC
}

model Users {
  id           Int       @id @default(autoincrement())
  globalId     String    @unique @default(uuid())
  email        String    @unique
  mobileNumber Int       @unique
  name         String
  password     String
  role         Role
  language     Language
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  otps         OTPs[]
  patient      Patients?
}

model OTPs {
  id        Int      @id @default(autoincrement())
  value     Int
  used      Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [userId], references: [id])
  userId    Int
}

model Patients {
  id          Int           @id @default(autoincrement())
  globalId    String        @unique @default(uuid())
  dateOfBirth DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  User        Users         @relation(fields: [userId], references: [id])
  userId      Int           @unique
  vitals      Vital_Signs[]
}

enum VitalSignsTypes {
  SYSTOLIC_PRESSURE
  DIASTOLIC_PRESSURE
  BLOOD_GLUCOSE
  HEIGHT
  WEIGHT
  HEART_RATE
  AGE
}

model Vital_Signs_Types {
  id          Int             @id @default(autoincrement())
  globalId    String          @unique @default(uuid())
  type        VitalSignsTypes
  minValue    Float
  maxValue    Float
  vitalSign   Vital_Signs     @relation(fields: [vitalSignId], references: [id])
  vitalSignId Int
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Vital_Signs {
  id            Int                 @id @default(autoincrement())
  globalId      String              @unique @default(uuid())
  vitalSignType Vital_Signs_Types[]
  patient       Patients            @relation(fields: [patientId], references: [id])
  patientId     Int
  value         Float
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
}
